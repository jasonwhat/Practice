    <div class="index-wrapper">

        <section id="timeline">
            {{#foreach posts}}
            <article class="article">

                <div class="inner">
                    <span class="date">
                    <span class="day">{{date format="DD"}}</span>
                    <span class="month">{{date format="MMM"}}</span>
                    <span class="year">{{date format="YYYY"}}</span>
                    </span>
                    <a href="{{url}}">
                        {{#if image}}
                        <img src="{{image}}" />
                        {{/if}}
                        <h2>{{{title}}}</h2>
                        </a>
                        <div id="fade-container">
			<div id="fade-content">
                        {{content}}
                      </div>
                      <div class="fade-anchor"><span class="fade-anchor-text">uncover</span></div>
		</div>
                </div>

            </article>
            {{/foreach}}
        </section>

    </div>

{{pagination}}
